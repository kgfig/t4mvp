<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ask_nickname"
        android:text="@string/get_name_question"
        android:textSize="@dimen/header_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/text_margin"/>

    <EditText
        android:id="@+id/enter_nickname_field"
        android:hint="@string/all_name_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/submit_nickname"
        android:text="@string/all_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/skip_nickname"
        android:text="@string/all_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
