<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.InterviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/interview_btn_question_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></FrameLayout>
        <!--
        <ImageButton
            android:id="@+id/interview_button_play_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_media_play"/>
        -->
        <TextView
            android:id="@+id/interview_textview_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="test"
            android:textSize="@dimen/header_size" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/interview_btn_answer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <TextView
        android:id="@+id/interview_textview_questionnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/interview_playback_btn_prev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/text_margin"/>
        <Button
            android:id="@+id/interview_playback_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/text_margin"/>
    </LinearLayout>
</LinearLayout>
